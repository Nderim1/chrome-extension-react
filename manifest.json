{
  "manifest_version": 3,
  "name": "Twitter Extension React",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.twitter.com/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
